<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minHeight="100dp"
    android:padding="10dp" >

    <!-- Schedule step exercise image -->
    <ImageView
        tools:ignore="ContentDescription"
        android:id="@+id/schedule_step_exercise_image"
        android:layout_weight="2.5"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:src="@drawable/image_recycler_view_daily_workout_default" />

    <!-- Schedule step & Exercise info -->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_weight="6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <!-- Exercise title -->
        <TextView
            android:id="@+id/schedule_step_exercise_title_txt"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textColor="@color/theme_text_dark"
            android:textStyle="bold"
            android:textSize="18sp" />

        <!-- Schedule step sets info -->
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal" >

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginEnd="5dp"
                android:text="@string/schedule_step_set_label"
                android:textColor="@color/theme_text_dark"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/schedule_step_sets_txt"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:maxLines="1"
                android:textColor="@color/theme_text_dark"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Schedule step rest time info -->
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal" >

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginEnd="5dp"
                android:text="@string/schedule_step_set_rest_time"
                android:textColor="@color/theme_text_dark"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/schedule_step_rest_time_txt"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:maxLines="1"
                android:textColor="@color/theme_text_dark"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

    <!-- Schedule step info button -->
    <ImageView
        tools:ignore="ContentDescription"
        android:id="@+id/schedule_step_exercise_info_btn"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_info_button" />

</LinearLayout>