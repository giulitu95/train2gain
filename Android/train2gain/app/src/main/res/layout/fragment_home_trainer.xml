<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">

    <!-- Layout for "Create a new Schedule" button -->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="10dp" >

        <Button
            android:id="@+id/home_trainer_btn_new_schedule"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:paddingStart="30dp"
            android:paddingEnd="10dp"
            android:background="@drawable/image_home_trainer_new_schedule"
            android:drawableEnd="@drawable/image_home_arrow_right"
            android:backgroundTint="@android:color/darker_gray"
            android:backgroundTintMode="multiply"
            android:scaleType="centerCrop"
            android:text="@string/home_new_schedule"
            android:textColor="@color/theme_text"
            android:textAllCaps="false"
            android:textSize="35sp"
            android:lineSpacingExtra="5dp"
            android:gravity="start|center_vertical" />
    </android.support.v7.widget.CardView>

    <!-- Layout for "Manage users" button -->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="10dp" >

        <Button
            android:id="@+id/home_trainer_btn_manage_users"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:paddingStart="30dp"
            android:paddingEnd="10dp"
            android:background="@drawable/image_home_trainer_manage_users"
            android:drawableEnd="@drawable/image_home_arrow_right"
            android:backgroundTint="@android:color/darker_gray"
            android:backgroundTintMode="multiply"
            android:scaleType="centerCrop"
            android:text="@string/home_manage_users"
            android:textColor="@color/theme_text"
            android:textAllCaps="false"
            android:textSize="35sp"
            android:lineSpacingExtra="5dp"
            android:gravity="start|center_vertical" />
    </android.support.v7.widget.CardView>

</LinearLayout>