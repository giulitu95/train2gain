<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="20dp"
    tools:context=".ui.activity.athlete.AddAthleteInfoActivity">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="110dp"
        android:id="@+id/gym_logo"
        android:src="@drawable/image_app_logo"/>
    <TextView
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="... Hai quasi finito"/>
    <EditText
        android:layout_marginTop="20dp"
        android:inputType="number"
        android:id="@+id/addathleteinfo_weight_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Peso corporeo" />
    <EditText
        android:inputType="number"
        android:id="@+id/addathleteinfo_height_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Altezza" />
    <EditText
        android:id="@+id/addathleteinfo_firstworkoutdate_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:hint="Data primo allenamento"/>
    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/addathleteinfo_confirm_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="confirm"/>
</LinearLayout>